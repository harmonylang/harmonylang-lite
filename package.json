{
	"name": "harmonylang-lite",
	"displayName": "HarmonyLang Lite",
	"description": "A web-based framework for running Harmony, a Python-like concurrent programming language.",
	"icon": "images/harmonylang.png",
	"version": "0.1.0",
	"publisher": "kevinsun-dev-cornell",
	"repository": "https://github.com/kevinsun-dev/harmonylang",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"CS 4410",
		"Harmony",
		"Syntax",
		"Language"
	],
	"author": {
		"email": "contact@kevinsun.dev",
		"name": "Kevin Sun"
	},
	"license": "MIT",
	"activationEvents": [
		"onLanguage:harmony"
	],
	"browser": "./dist/web/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "harmony",
				"aliases": [
					"Harmony",
					"harmony"
				],
				"extensions": [
					".hny"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "harmony",
				"scopeName": "source.harmony",
				"path": "./syntaxes/harmony.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "harmonylang-lite.run",
				"title": "Run Harmony (Server)"
			}
		],
		"keybindings": [
			{
				"command": "harmonylang-lite.run",
				"key": "alt+shift+n"
			}
		]
	},
	"scripts": {
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"pretest": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "webpack --config ./build/web-extension.webpack.config.js",
		"watch-web": "webpack --watch --config ./build/web-extension.webpack.config.js",
		"package-web": "webpack --mode production --devtool hidden-source-map --config ./build/web-extension.webpack.config.js",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^14.17.11",
		"@types/vscode": "^1.59.0",
		"@types/webpack-env": "^1.16.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"@vscode/test-web": "^0.0.8",
		"assert": "^2.0.0",
		"eslint": "^7.27.0",
		"mocha": "^8.4.0",
		"process": "^0.11.10",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"create-html-element": "^3.0.0",
		"formdata-polyfill": "^4.0.6",
		"jszip": "^3.7.1",
		"node-html-parser": "^4.1.3"
	}
}
